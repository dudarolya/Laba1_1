@model IEnumerable<Laba1.Songs>

@{
    ViewData["Title"] = "Songs";
}

<h1>Songs @ViewBag.AlbumName</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.AlbumId">Add New Song</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenName)
            </td>
            @if (User.IsInRole("admin") || User.IsInRole("moder"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SId">Delete</a>
                </td>
            }
            else
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.SId">Details</a>
                </td>
            }
            </tr>
}
    </tbody>
</table>
