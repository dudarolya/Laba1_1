@model Laba1.Songs

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Songs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SDuration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.AName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
