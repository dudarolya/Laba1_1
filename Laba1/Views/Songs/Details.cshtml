@if (User.IsInRole("admin") || User.IsInRole("moder"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.SId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}