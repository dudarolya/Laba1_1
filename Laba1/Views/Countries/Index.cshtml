@model IEnumerable<Laba1.Countries>

@{
    ViewData["Title"] = "Countries";
}

    <h1>Countries</h1>

<p>
    <a asp-action="Create">Add New Country</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CLang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CCapital)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CLang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CCapital)
            </td>
            @if (User.IsInRole("admin") || User.IsInRole("moder"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CId">Delete</a>
                </td>
            }
            else 
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.CId">Details</a>
                </td>
            }
            </tr>
}
    </tbody>
</table>
